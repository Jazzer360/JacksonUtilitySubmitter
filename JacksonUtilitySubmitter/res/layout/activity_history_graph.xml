<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.derekjass.jacksonutilitysubmitter"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="setupGraph"
		android:text="SetupGraph" />

	<com.derekjass.jacksonutilitysubmitter.views.BarGraph
		android:id="@+id/graph"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="6dp"
		app:barColor="#FF33B5E5"
		app:barCount="12" />

</LinearLayout>